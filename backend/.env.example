# Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=8080

# AI Provider Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
PHOTO_ANALYSIS_PROVIDER=gemini  # Options: "gpt" or "gemini"

# Google Vertex AI (for Imagen 3)
GOOGLE_GENAI_USE_VERTEXAI=true
GOOGLE_CLOUD_PROJECT=your_gcp_project_id
GOOGLE_CLOUD_LOCATION=us-central1

# Payment Integration (Razorpay - India)
RAZORPAY_ENABLED=true
RAZORPAY_KEY_ID=rzp_live_your_key_id
RAZORPAY_SECRET=your_razorpay_secret

# Payment Integration (Stripe - US/International)
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_test_... # Use sk_live_... for production
STRIPE_PUBLISHABLE_KEY=pk_test_... # Use pk_live_... for production

# CORS Configuration
# For production: exact frontend URL (no trailing slash)
# For development: can use wildcard
CORS_ORIGIN=https://your-frontend.onrender.com

# Development Mode
# When enabled: skips API calls, background removal, rate limiting
# Can also be triggered by venue name "Hotel Jain Ji Shubham"
DEV_MODE=false
